<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_lista_promociones_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_gallery"
        android:minWidth="100dp" />

    <LinearLayout
        android:id="@+id/lly_lista_promociones_informacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:longClickable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt_lista_promociones_nombre_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre producto"
            android:textColor="@android:color/black"
            android:textSize="@dimen/lista_promociones_nombre_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_lista_promociones_descripcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Descripcion 1"
            android:textColor="#ff000000"
            android:textSize="@dimen/lista_promociones_desc1_textsize"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_lista_promociones_descripcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="-10%"
        android:textColor="#ff000000"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:textSize="@dimen/lista_promociones_desc2_textsize"
        android:minWidth="120dp"
        android:typeface="sans"
        android:textStyle="bold"
        android:gravity="right" />

</LinearLayout>